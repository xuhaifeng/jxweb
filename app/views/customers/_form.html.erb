      <%= f.label "所属网点" %><br />
      <% if current_user.site_id.nil? %>
          <%= f.select(:site_id, options_from_collection_for_select(Site.all,:id,:name))%>
      <% else %>
          <%= f.select(:site_id, options_from_collection_for_select(Site.where(:id => current_user.site_id),:id,:name))%>
      <% end %>
    </div>
  <div class="actions">
    <%= f.submit "提交" %>
  </div>
<% end %>
