    <%= f.label "电话" %><br />
    <%= f.text_field :tel %>
  </div>
  <div class="field">
    <%= f.label "手机号码" %><br />
    <%= f.text_field :mobile %>
  </div>
  <div class="field">
    <%= f.label "电子邮件" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "地址" %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label "花园面积" %><br />
    <%= f.text_field :squre %>
  </div>
  <div class="field">
    <%= f.label "居住人数" %><br />
    <%= f.number_field :headcount %>
  </div>
  <div class="field">
    <%= f.label "工作单位" %><br />
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label "工作类型" %><br />
    <%= f.text_field :job_type %>
  </div>
  <div class="field">
    <%= f.label "兴趣爱好" %><br />
    <%= f.text_field :interests %>
  </div>
  <div class="field">
    <%= f.label "服务类别" %><br />
    <%= f.number_field :service_type %>
  </div>
