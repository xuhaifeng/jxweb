<h2>用户登录</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label '用户名或者电子邮件地址' %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label '密码' %><br />
  <%= f.password_field :password %></div>

  <div><%= f.submit "登录" %></div>
<% end %>

